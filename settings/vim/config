syntax on
set incsearch
set ignorecase
set smartcase
set number

imap kj <Esc>
noremap - $
nnoremap ; :

set smartindent
set tabstop=2
set shiftwidth=2
set expandtab

" Easy window navigation
map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l




filetype on
set nocompatible
set fileencoding=utf-8
set encoding=utf-8
set noswapfile
